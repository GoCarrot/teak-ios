default_platform(:ios)

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Run tests"
  lane :test do
    scan(
      workspace: 'Automated/Automated.xcworkspace',
      output_directory: 'test_output/automated',
      output_files: 'results.xml',
      output_types: 'junit'
    )
  end
end
